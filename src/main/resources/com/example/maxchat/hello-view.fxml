<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.maxchat.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextArea fx:id="chatArea" editable="false" prefHeight="670.0" prefWidth="460.0">
        <font>
            <Font size="16.0" />
        </font></TextArea>
    <TextArea fx:id="messageArea" prefHeight="80.0" prefWidth="200.0" promptText="Введите текст сообщения">
        <font>
            <Font size="16.0" />
        </font>
    </TextArea>
</VBox>
